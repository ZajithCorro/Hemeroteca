extends ../config/template.pug
append config
    -title=  "Hemeroteca | Consulta"
    -description= "Consulta de la gaceta"

    -second_section = "Resultados de búsqueda"

block main
    main.main
        .contenedor
            h1.contenedor-titulo Datos de consulta
            .contenedor-grid.form
                +data-section-item("Número de gaceta", "Número de gaceta")
                .contenedor
                    label.label Fecha del ejemplar
                    .contenedor-grid
                        input(type="date")
                        input(type="date")
                .contenedor
                    label.label Fecha de recepción
                    .contenedor-grid
                        input(type="date")
                        input(type="date")
                .contenedor-grid.contenedor-btns
                    button Limpiar
                    button Consultar
                
        h1.contenedor-titulo Resultados de búsqueda